<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/siscodis</property>
    <property name="hibernate.connection.username">root</property>
    <property name="hibernate.connection.password"></property>
    
    <mapping class="br.com.uninorte.siscodis.entidades.Blocos"/>
    <mapping class="br.com.uninorte.siscodis.entidades.Cadeiras"/>
    <mapping class="br.com.uninorte.siscodis.entidades.Cursos"/>
    <mapping class="br.com.uninorte.siscodis.entidades.EquipamentoDaSala"/>
    <mapping class="br.com.uninorte.siscodis.entidades.Equipamentos"/>
    <mapping class="br.com.uninorte.siscodis.entidades.Instituicoes"/>
    <mapping class="br.com.uninorte.siscodis.entidades.Periodos"/>
    <mapping class="br.com.uninorte.siscodis.entidades.PeriodosDaSala"/>
    <mapping class="br.com.uninorte.siscodis.entidades.Salas"/>
    <mapping class="br.com.uninorte.siscodis.entidades.Turmas"/>
    <mapping class="br.com.uninorte.siscodis.entidades.Turnos"/>
    <mapping class="br.com.uninorte.siscodis.entidades.TurnosDoCurso"/>
    <mapping class="br.com.uninorte.siscodis.entidades.Funcionarios"/>
    <mapping class="br.com.uninorte.siscodis.entidades.Usuarios"/>
  </session-factory>
</hibernate-configuration>
